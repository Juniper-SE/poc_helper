---
- name: Run the command or configuration on devices
  hosts: mx
  roles:
    - Juniper.junos
  gather_facts: no
  connection: local

  tasks:
    - name: Configure Juniper device
      juniper_junos_config:
        provider:
          host: "{{ ansible_host }}"
          user: "jnpr"
        load: set
        lines:
          - set interfaces ge-0/0/0 description Test
        comment: This is a comment